<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.ibatis.dddybtest.EmployeeMapper">

    <!-- namespace：名称空间
         id：sql的唯一标识
         resultType：返回值类型
         #{id}：从传递过来的参数中取出id值
     -->

    <select id="selectEmp" resultType="org.apache.ibatis.dddybtest.Employee">
        select id,last_name lastname,gender,email from employee where id = #{id}
    </select>
</mapper>